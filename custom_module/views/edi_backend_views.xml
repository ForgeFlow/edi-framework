<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="edi_backend_view_form" model="ir.ui.view">
        <field name="model">edi.backend</field>
        <field name="inherit_id" ref="edi_oca.edi_backend_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='backend_type_id']/.." position="after">
                <h2>
                    <label for="backend_group_id" class="oe_edit_only" />
                    <field name="backend_group_id" />
                </h2>
            </xpath>
        </field>
    </record>
    <record id="edi_backend_view_search" model="ir.ui.view">
        <field name="model">edi.backend</field>
        <field name="inherit_id" ref="edi_oca.edi_backend_view_search" />
        <field name="arch" type="xml">
            <field name="backend_type_id" position="after">
                <field name="backend_group_id" />
                <filter
                    name="group_by_backend_group_id"
                    string="Backend Type"
                    context="{'group_by': 'backend_group_id'}"
                />
            </field>
        </field>
    </record>
</odoo>
