<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="edi_exchange_record_view_tree" model="ir.ui.view">
        <field
            name="name"
        >edi.exchange.record.tree - edi_exchange_record_company</field>
        <field name="model">edi.exchange.record</field>
        <field name="inherit_id" ref="edi_oca.edi_exchange_record_view_tree" />
        <field name="arch" type="xml">
            <field name="external_identifier" position="before">
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="hide"
                />
            </field>
        </field>
    </record>

    <record id="edi_exchange_record_view_form" model="ir.ui.view">
        <field
            name="name"
        >edi.exchange.record.form - edi_exchange_record_company</field>
        <field name="model">edi.exchange.record</field>
        <field name="inherit_id" ref="edi_oca.edi_exchange_record_view_form" />
        <field name="arch" type="xml">
            <field name="backend_id" position="after">
                <field name="company_id" groups="base.group_multi_company" />
            </field>
        </field>
    </record>
</odoo>
